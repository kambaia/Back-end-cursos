
  <% include partials/head %>
  <div class="container-flue">
          <div class="body-card">
              
              <% if(validacao.length > 0) { %>
                  <div class="alert alert-danger">
                      <strong>Atenção!</strong>
                      <ul>
                          <% for(var i = 0; i < validacao.length; i++) { %>
                              <li><%=validacao[i].msg%></li>
                          <% } %>
                      </ul>
            </div>
            <% } %>
            <div class="cap">
                <h2>Adicionar documentos</h2>
                <hr>
            </div>
              
              <form action="/cadastrar" method="POST">
                 <input type="text" name="nome_usuario" class="form-control" placeholder="Entre com o seu nome">
                 <input type="text" name="email" class="form-control" placeholder="Email:">
                 <input type="text" name="senha" class="form-control" placeholder="Senha:">
                 <input type="text" name="confirma_senha" class="form-control" placeholder="confirma a senha">
                 <button type="submit" class="btn btn-primary">Cadastrar</button>
              </form>
              
          </div>
  </div>
  